	keywords = {3GPP, Cellular networks, Downlink, Internet of Things, Internet of Things (IoT), Long Term Evolution, Long Term Evolution (LTE), Uplink, low power wide area (LPWA), machine type communication (MTC), narrowband IoT (NB-IoT)},
