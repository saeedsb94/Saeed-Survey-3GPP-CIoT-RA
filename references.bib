@inproceedings{tayyab_energy_2022,
	title = {Energy {Efficient} {RRM} {Relaxation} for {Reduced} {Capability} {UEs} in {5G} {Networks}},
	doi = {10.1109/GLOBECOM48099.2022.10000873},
	abstract = {Radio resource management (RRM) relaxation has been introduced in 3GPP NR Release 16 as a key feature for optimizing UE power saving. It can be applied for UEs under “low mobility” and “cell edge” criteria. In this study, we investigate its benefit in addition to discontinuous reception (DRX) for reduced capability (RedCap) new radio (NR) UEs, a new type of low-cost device, for which the power saving is a key requirement. We provide comprehensive simulation results that quantify energy saving by applying RRM relaxation for stationary and pedestrian RedCap UEs with different “cell edge” criteria and DRX settings. In addition, we evaluate the impact in terms of handover failures and packet delay. The simulation analysis shows that dynamic adjustment of “cell edge” criteria of RRM relaxation is a more power-efficient solution that can achieve up to 64\% to 96\% RRM measurement energy saving.},
	booktitle = {{GLOBECOM} 2022 - 2022 {IEEE} {Global} {Communications} {Conference}},
	author = {Tayyab, Muhammad and Kolehmainen, Niko and Butt, M. Majid and Khlass, Ahlem and Ratasuk, Rapeepat},
	month = dec,
	year = {2022},
	keywords = {Costs, DRX, Energy consumption, Energy efficiency, Energy measurement, Handover, Measurement, RRM relaxation, RedCap UE, Simulation, energy consumption, handover, handover failure},
	pages = {99--104},
}

@article{moloudi_coverage_2021,
	title = {Coverage {Evaluation} for {5G} {Reduced} {Capability} {New} {Radio} ({NR}-{RedCap})},
	volume = {9},
	issn = {2169-3536},
	doi = {10.1109/ACCESS.2021.3066036},
	abstract = {The fifth-generation (5G) wireless technology is primarily designed to address a wide range of use cases categorized into the enhanced mobile broadband (eMBB), ultra-reliable and low latency communication (URLLC), and massive machine-type communication (mMTC). Nevertheless, there are a few other use cases that are in-between these main use cases such as industrial wireless sensor networks, video surveillance, or wearables. In order to efficiently serve such use cases, in Release 17, the 3rd generation partnership project (3GPP) introduced the reduced capability NR devices (NR-RedCap) with lower cost and complexity, smaller form factor, and longer battery life compared to regular NR devices. However, one key potential consequence of device cost and complexity reduction is coverage loss. In this paper, we provide a comprehensive evaluation of NR RedCap coverage for different physical channels and initial access messages to identify the channels/messages that are potentially coverage limiting for RedCap UEs. We perform the coverage evaluations for RedCap UEs operating in three different scenarios, namely Rural, Urban and Indoor with carrier frequencies 0.7 GHz, 2.6 GHz and 28 GHz, respectively. Our results confirm that for all the considered scenarios, the amounts of required coverage recovery for RedCap channels are either less than 1 dB or can be compensated by considering smaller data rate targets for RedCap use cases.},
	journal = {IEEE Access},
	author = {Moloudi, Saeedeh and Mozaffari, Mohammad and Veedu, Sandeep Narayanan Kadan and Kittichokechai, Kittipong and Wang, Y.-P. Eric and Bergman, Johan and Höglund, Andreas},
	year = {2021},
	note = {Conference Name: IEEE Access},
	keywords = {5G, Bandwidth, Complexity theory, Downlink, Limiting, NR, RedCap, Ultra reliable low latency communication, Uplink, Wearable computers, coverage recovery, link budget evaluation, reduced capability devices},
	pages = {45055--45067},
}

@article{veedu_toward_2022,
	title = {Toward {Smaller} and {Lower}-{Cost} {5G} {Devices} with {Longer} {Battery} {Life}: {An} {Overview} of {3GPP} {Release} 17 {RedCap}},
	volume = {6},
	issn = {2471-2833},
	shorttitle = {Toward {Smaller} and {Lower}-{Cost} {5G} {Devices} with {Longer} {Battery} {Life}},
	doi = {10.1109/MCOMSTD.0001.2200029},
	abstract = {The fifth generation (5G) wireless technology is primarily developed to support three classes of use cases, namely, enhanced mobile broadband (eMBB), ultra-reliable and low-latency communication (URLLC), and massive machine-type communication (mMTC), with significantly different requirements in terms of data rate, latency, connection density, and power consumption. Meanwhile, there are several key use cases, such as industrial wireless sensor networks, video surveillance, and wearables, whose requirements fall in-between those of eMBB, URLLC, and mMTC. In this regard, 5G can be further optimized to efficiently support such mid-range use cases. Therefore, in Release 17, the 3rd generation partnership project (3GPP) developed the essential features to support a new device type enabling reduced capability (RedCap) new radio (NR) devices aiming at lower cost/complexity, smaller physical size, and longer battery life compared to regular 5G NR devices. In this article, we provide a comprehensive overview of 3GPP Release 17 Red-Cap while describing newly introduced features, cost reduction and power saving gains, and performance and coexistence impacts. Moreover, we present key design guidelines, fundamental tradeoffs, and future outlook for RedCap evolution.},
	number = {3},
	journal = {IEEE Communications Standards Magazine},
	author = {Veedu, Sandeep Narayanan Kadan and Mozaffari, Mohammad and Höglund, Andreas and Yavuz, Emre A. and Tirronen, Tuomas and Bergman, Johan and Wang, Y.-P. Eric},
	month = sep,
	year = {2022},
	note = {Conference Name: IEEE Communications Standards Magazine},
	keywords = {Enhanced mobile broadband, Performance evaluation, Power demand, Ultra reliable low latency communication, Wearable computers, Wireless communication, Wireless sensor networks},
	pages = {84--90},
}

